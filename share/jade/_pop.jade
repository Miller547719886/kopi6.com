//- mixin-分页
mixin _pop-login
	._pop(style="display:none")
		._login-box
			._pop-close.icon-close.js-pop-close
			._login.border
				.title 会员登录を新入会員登録されていた
				.login-1
					ul.login-1
						li
							span 電子メール:
							input.ipt.mail(type="text")
						li
							span パスワード：
							input.ipt.password(type="password")
						li
							span 画像認証：
							input.validate(type="text")
							img.vali-img(src="../img/validate.jpg", alt="")
						li.ta-c
							a(href="javascript:login()")
								img(src="../img/index_35.png", alt="")
							a(href="javascript:reg()")
								img(src="../img/index_38.png", alt="")
						li.ta-c
							a(href="javascript:forget()")
								img(src="../img/index_43.png", alt="")
					//- ul.login-2
					//- 	li
					//- 		em.user xiongdiao
					//- 	li.ta-c
					//- 		a(href="javascript:info()")
					//- 			img(src="../img/index_36.png", alt="")
					//- 		a(href="javascript:loginout()")
					//- 			img(src="../img/index_37.png", alt="")
	script.
		(function(win, doc, con, undefined) {
			var pop_c = document.querySelector('.js-pop-close');
			pop_c.addEventListener('click', function() {
				var target = document.querySelector('._pop');
				target.style.display = "none";
			});
		}(window, document, console));
