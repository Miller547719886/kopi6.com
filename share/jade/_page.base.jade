block variables
	-var pageTitle;
	-var pageClass;

doctype html
html
	head
		title= pageTitle
		meta(http-equiv="Content-Type",content="charset=utf-8")
		meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
		block css-js
			link(rel="stylesheet", type="text/css",href="kopi6.min.css")
			block spec-css-js

	//- 导入mixin集合
	include @mixins-components

	body(class=pageClass)
		.wrap-1000
			block header
				+_header
			//- 默认无banner
			block banner
			//- 默认左右结构
			block main
				.right.fn-clear
					block right
						+_search-list
						.fn-clear
							+_pro-new-txt('一番新しいアップロード')
							+_ems
						+_pro-sell
						+_pro-hot
						+_pro-new-pic
						+_handbook
						+_brand-zone
				.left.fn-clear
					block left
						+_side-nav
						+_pro-new
						+_side-info
				.pop-box
					block pop
						+_pop-login

			block footer
				+_footer
			block side_bar
				+_sidebar
	block script
		script(src="../plugins/jquery-1.12.4/jquery.1.12.4.min.js")
		block spec-script
			+func-scroll-v
			+func-scroll-h

