block variables
	-var pageTitle;
	-var pageClass;

doctype html
html
	head
		title= pageTitle
		meta(http-equiv="Content-Type",content="charset=utf-8")
		meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
		block css-js
			link(rel="stylesheet", type="text/css",href="kopi6.min.css")
			block spec-css-js

	//- 导入mixin集合
	include _mixins-components

	body(class=pageClass)
		.wrap-1000
			block header
				+_header
			//- 默认无banner
			block banner
			//- 默认左右结构
			block main
				.right.top.fn-clear
					block right
						+_pro-new-txt('一番新しいアップロード')
						+_pro-sell
						+_pro-hot
						+_pro-new-pic
						+_handbook
						+_brand
				.left.top.fn-clear
					block left
						+_login
						+_ems
						+_side-nav
						+_pro-new

			block footer
				+_footer
			block side_bar
	block script
		script(src="../plugins/jquery-1.12.4/jquery.1.12.4.min.js")
		block spec-script
			+func-scroll-v
			+func-scroll-h

